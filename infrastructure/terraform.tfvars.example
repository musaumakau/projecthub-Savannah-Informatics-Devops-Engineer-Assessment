# AWS Configuration
aws_region  = "eu-west-1"
environment = "production"
owner       = "Juan"

# Project Settings
project_name = "devops-assessment"

# Network Configuration
vpc_cidr           = "10.0.0.0/16"
public_subnet_cidr = "10.0.1.0/24"

# EC2 Instance Configuration
instance_type    = "t3.medium"  # t3.small, t3.medium, t3.large
root_volume_size = 50           # GB - single volume for everything

# SSH Configuration
# Generate your key: ssh-keygen -t rsa -b 4096 -f ~/.ssh/devops-assessment
ssh_public_key = "<YOUR_PUBLIC_KEY>"

# Security - IMPORTANT: Change these to your IP for better security!
ssh_allowed_ips = ["<YOUR_IP>/32"]

monitoring_allowed_ips = [
  "0.0.0.0/0",  # Allow from anywhere - CHANGE THIS IN PRODUCTION!
  # "YOUR_IP/32",  # Restrict to your IP
]

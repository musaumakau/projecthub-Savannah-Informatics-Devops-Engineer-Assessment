{
  "name": "projecthub-dashboard",
  "version": "1.0.0",
  "description": "Advanced project management dashboard with task tracking and team collaboration",
  "main": "src/js/app.js",
  "scripts": {
    "dev": "webpack serve --mode development --open",
    "build": "webpack --mode production",
    "test": "jest",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.{js,css,html}\"",
    "serve": "http-server build -p 3000",
    "docker:build": "docker build -t projecthub .",
    "docker:run": "docker run -p 8080:80 projecthub",
    "docker:dev": "docker-compose up -d"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/projecthub-Savannah-Informatics-Devops-Engineer-Assessment.git"
  },
  "keywords": [
    "project-management",
    "dashboard",
    "task-tracking",
    "vanilla-js",
    "responsive",
    "docker"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "babel-loader": "^9.1.0",
    "css-loader": "^6.8.0",
    "eslint": "^8.42.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "style-loader": "^3.3.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0"
  }
}